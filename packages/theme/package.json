{
  "name": "@hope-ui/theme",
  "version": "0.0.0",
  "private": false,
  "description": "The SolidJS component library you've hoped for.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design",
    "system",
    "components"
  ],
  "homepage": "https://hope-ui.com",
  "bugs": {
    "url": "https://github.com/fabien-ml/hope-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabien-ml/hope-ui.git",
    "directory": "packages/theme"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    },
    "./styles": "./dist/styles"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c && rimraf dist/styles && sass styles:dist/styles --no-source-map && postcss -r dist/styles/*.css",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hope-ui/utils": "workspace:^*",
    "lodash.merge": "4.6.2"
  },
  "devDependencies": {
    "@types/lodash.merge": "4.6.6",
    "autoprefixer": "10.4.7",
    "cssnano": "5.1.9",
    "postcss": "8.4.14",
    "postcss-cli": "9.1.0",
    "rimraf": "3.0.2",
    "sass": "1.52.1"
  },
  "peerDependencies": {
    "solid-js": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
