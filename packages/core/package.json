{
  "name": "@hope-ui/core",
  "version": "0.0.0",
  "private": false,
  "description": "An open source design system for SolidJS.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design-system",
    "components"
  ],
  "homepage": "https://github.com/hope-ui/hope-ui/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/hope-ui/hope-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hope-ui/hope-ui.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c && sass styles:dist/styles --no-source-map && postcss -r dist/styles/*.css",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@floating-ui/dom": "0.5.4",
    "@solid-primitives/refs": "0.3.0",
    "@solid-primitives/utils": "2.1.1",
    "clsx": "1.2.1"
  },
  "peerDependencies": {
    "solid-js": "^1.4.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
